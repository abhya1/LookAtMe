                                android:layout_height="0dp"
                                android:layout_weight="4"
                                android:background="#FCE4EC"
                                android:src="@drawable/ethnicweargirls"
                                android:scaleType="centerCrop"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:textSize="15dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:text="For her"
                                android:onClick="gotomain"
                                android:id="@+id/textView4" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:textSize="25dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:text="Ethnic Wear"
                                android:onClick="gotomain"
                                android:id="@+id/textView4" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card1"
                        android:layout_width="260dp"
                        android:layout_height="260dp"
                        card_view:cardCornerRadius="5dp"
                        android:layout_margin="5dp"
                        android:onClick="gotomensethnicwear"
                        android:clickable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="4"
                                android:background="#E8F5E9"
                                android:src="@drawable/ethnicwearmen"
                                android:scaleType="centerCrop"
                                android:id="@+id/imageView3" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:textSize="15dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:text="For him"
                                android:onClick="gotomain"
                                android:id="@+id/textView4" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:textSize="25dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:text="Ethnic Wear"
                                android:onClick="gotomain"
                                android:id="@+id/textView4" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/card1"
                        android:layout_width="260dp"
                        android:layout_height="260dp"
                        card_view:cardCornerRadius="5dp"
                        android:onClick="gotowomensaccessories"
                        android:layout_margin="5dp"
                        android:clickable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="vertical"
                            android:layout_height="match_parent">
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="4"
                                android:background="#E3F2FD"
                                android:scaleType="fitXY"
                                android:src="@drawable/womenfa"
                                />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.5"
                                android:textSize="15dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:text="For her"
                                android:onClick="gotomain"
                                android:id="@+id/textView4" />
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:textSize="25dp"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:text="Fashion Accessories"
                                android:onClick="gotomain"
                                android:id="@+id/textView4" />
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:onClick="gotorefernearnn"
        android:clickable="true">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:scaleType="centerCrop"
    android:src="@drawable/refernearn" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_margin="5dp"
        android:clickable="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:textSize="20dp"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
